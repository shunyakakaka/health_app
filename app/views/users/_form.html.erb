<div class="ui form">
  <div class="three field">
    <%= form_with model: @user, method: :post do |f|%>
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password%>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>
      <%= f.submit "登録", class: "ui blue button" %>
    <% end %>
  </div>
</div>
