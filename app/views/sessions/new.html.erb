<%= render partial: "shared/success_messages" %>
<% if flash[:error_message] %>
  <div class="ui negative message ui center aligned header">
    <%= flash[:error_message] %>
  </div>
<% end %>

<div class="ui grid">
  <div class="column ui center aligned header"><h2>ログイン画面</h2></div>
</div>

<div class="divider"></div>

<div class="ui form">
  <div class="two field">
    <%= form_with model: nil, scope: :session, url: login_path, method: :post do |f| %>
      <div class="field">
        <label for="session_name">名前</label>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <label for="session_password">パスワード</label>
        <%= f.password_field :password %>
      </div>
      <%= f.submit "ログイン", class:"ui blue button"%>
      <%= link_to "ユーザー登録", new_user_path, class: "ui blue button" %>
    <% end %>
  </div>
</div>