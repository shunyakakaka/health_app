<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>
<div class="ui grid">
  <div class="three column row">
    <div class="column"></div>
    <div class="column">
      <div class="ui center aligned header">
        <h2>ユーザー一覧<h2>
      </div>
    </div>
    <div class="column">
      <div class="ui right aligned header">
        <%= link_to "新規登録", new_user_path, class: "ui blue button" %>
      </div>
    </div>
  </div>
</div>
<div class="ui divider"></div>
<table class="ui selectable table">
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>登録日時</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user|%>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.created_at %></td>
        <td><%= link_to "詳細", user_path(user.id), class: "ui button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>